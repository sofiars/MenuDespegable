<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/empleado_imagen"
        android:layout_width="40dp"
        android:layout_height="40dp">
    </ImageView>

    <TextView
        android:id="@+id/empleado_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        tools:text="Gabriel VÃ­quez"
        android:layout_toEndOf="@id/empleado_imagen">
    </TextView>

    <TextView
        android:id="@+id/empleado_puesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empleado_nombre"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/empleado_imagen"
        tools:text="Estudiante">

    </TextView>

    <TextView
        android:id="@+id/empleado_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</RelativeLayout>